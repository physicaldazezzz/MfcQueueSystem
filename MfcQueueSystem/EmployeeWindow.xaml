<Window x:Class="MfcQueueSystem.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рабочее место оператора" Height="550" Width="900" 
        Background="{StaticResource BackgroundColor}" WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ: ИНФОРМАЦИЯ О СОТРУДНИКЕ -->
        <StackPanel>
            <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <!-- УБРАЛ LetterSpacing -->
                    <TextBlock Text="👤 ОПЕРАТОР" Foreground="Gray" FontSize="12" FontWeight="Bold"/>
                    <TextBlock x:Name="OperatorNameText" Text="Загрузка..." FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,5,0,15"/>

                    <Separator Background="#F0F0F0" Margin="0,0,0,15"/>

                    <!-- УБРАЛ LetterSpacing -->
                    <TextBlock Text="🖥️ РАБОЧЕЕ ОКНО" Foreground="Gray" FontSize="12" FontWeight="Bold"/>
                    <TextBlock x:Name="CurrentWindowText" Text="..." FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Статистика -->
            <Border Background="White" CornerRadius="15" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <!-- УБРАЛ LetterSpacing -->
                    <TextBlock Text="📊 СТАТУС СМЕНЫ" Foreground="Gray" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="Смена открыта" FontSize="14" Foreground="#4CAF50" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ПРАВАЯ ПАНЕЛЬ: УПРАВЛЕНИЕ ОЧЕРЕДЬЮ -->
        <Border Grid.Column="1" Background="White" CornerRadius="20" Margin="30,0,0,0" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.1" ShadowDepth="5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="#F5F7FA" CornerRadius="10" Padding="15" HorizontalAlignment="Center">
                    <TextBlock Text="ТЕКУЩИЙ КЛИЕНТ" FontSize="14" FontWeight="Bold" Foreground="Gray"/>
                </Border>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="CurrentTicketText" Text="---" FontSize="90" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ServiceText" Text="Нет активного вызова" FontSize="20" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnCall" Content="📢 ВЫЗВАТЬ" Click="BtnCall_Click" Style="{StaticResource ModernBtn}" IsEnabled="False" Height="60" FontSize="18" Background="#4CAF50">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#4CAF50" Opacity="0.4"/>
                        </Button.Effect>
                    </Button>

                    <Button x:Name="BtnFinish" Grid.Column="2" Content="🏁 ЗАВЕРШИТЬ" Click="BtnFinish_Click" Style="{StaticResource ModernBtn}" IsEnabled="False" Height="60" FontSize="18" Background="#F44336">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#F44336" Opacity="0.4"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>