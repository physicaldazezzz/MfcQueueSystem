<Window x:Class="MfcQueueSystem.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информационное табло" Height="600" Width="1000" 
        Background="#F5F7FA" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Background="{StaticResource PrimaryColor}">
            <Grid Margin="20,0">
                <TextBlock Text="ЭЛЕКТРОННАЯ ОЧЕРЕДЬ" Foreground="White" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Сейчас:" Foreground="#E8EAF6" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="ClockText" Text="12:00" Foreground="White" FontSize="32" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Контент (Две колонки) -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/> <!-- Вызовы (Побольше) -->
                <ColumnDefinition Width="10"/>   <!-- Разделитель -->
                <ColumnDefinition Width="*"/>    <!-- Ожидание -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ КОЛОНКА: ВЫЗОВ (Кого обслуживают) -->
            <Border Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#4CAF50" CornerRadius="10,10,0,0">
                        <TextBlock Text="ВЫЗОВ КЛИЕНТА" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ListView x:Name="ActiveList" Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F1F8E9" CornerRadius="8" Margin="0,5" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 1. Номер и Имя -->
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TicketNumber}" FontSize="48" FontWeight="Bold" Foreground="#2E7D32"/>
                                            <TextBlock Text="{Binding ClientName}" FontSize="14" Foreground="Gray" TextTrimming="CharacterEllipsis" MaxWidth="200" HorizontalAlignment="Left"/>
                                        </StackPanel>

                                        <!-- 2. Стрелка и ВРЕМЯ -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0">
                                            <TextBlock Text="➔" FontSize="30" Foreground="Gray" HorizontalAlignment="Center"/>

                                            <!-- НОВАЯ ПЛАШКА СО ВРЕМЕНЕМ -->
                                            <Border Background="#E8F5E9" CornerRadius="10" Padding="10,2" Margin="0,5,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⏳ " FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding AvgDuration}" FontSize="14" FontWeight="Bold" Foreground="#43A047"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <!-- 3. Окно -->
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="ОКНО" FontSize="14" Foreground="Gray" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding WindowNumber}" FontSize="48" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- ПРАВАЯ КОЛОНКА: ОЖИДАНИЕ -->
            <Border Grid.Column="2" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FFA000" CornerRadius="10,10,0,0">
                        <TextBlock Text="ОЖИДАНИЕ" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ListView x:Name="WaitingList" Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <!-- Номер -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Услуга -->
                                            <ColumnDefinition Width="100"/>
                                            <!-- ВРЕМЯ -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Номер -->
                                        <TextBlock Grid.Column="0" Text="{Binding TicketNumber}" FontSize="24" FontWeight="Bold" Foreground="#37474F"/>

                                        <!-- Услуга -->
                                        <TextBlock Grid.Column="1" Text="{Binding ServiceName}" FontSize="16" Foreground="#78909C" 
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="10,0"/>

                                        <!-- ВРЕМЯ (Вызов в...) -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <TextBlock Text="Вызов в:" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding EstimatedTime}" FontSize="18" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>