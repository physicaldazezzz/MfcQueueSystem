<Window x:Class="MfcQueueSystem.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Терминал" Height="700" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid>
        <!-- Скрытые вкладки для навигации -->
        <TabControl x:Name="MainTabControl" BorderThickness="0" Background="Transparent" SelectedIndex="0">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <!-- Скрываем заголовки вкладок -->
                </Style>
            </TabControl.ItemContainerStyle>

            <!-- ШАГ 1: ВЫБОР ЯЗЫКА -->
            <TabItem>
                <Grid>
                    <TextBlock Text="Выберите язык / Select Language" FontSize="30" FontWeight="Light" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Click="Lang_Ru_Click" Width="250" Height="250" Margin="20" Background="White" BorderThickness="0">
                            <StackPanel>
                                <TextBlock Text="🇷🇺" FontSize="80" HorizontalAlignment="Center"/>
                                <TextBlock Text="РУССКИЙ" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Click="Lang_En_Click" Width="250" Height="250" Margin="20" Background="White" BorderThickness="0" Opacity="0.5">
                            <StackPanel>
                                <TextBlock Text="🇬🇧" FontSize="80" HorizontalAlignment="Center"/>
                                <TextBlock Text="ENGLISH" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- ШАГ 2: ТИП ЗАЯВИТЕЛЯ -->
            <TabItem>
                <Grid>
                    <Button Content="⬅ Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="Back_Click" Style="{StaticResource ModernBtn}"/>
                    <TextBlock Text="Кто вы?" FontSize="30" FontWeight="Light" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>

                    <UniformGrid Columns="2" Margin="50,150,50,50">
                        <Button Click="Type_Phys_Click" Margin="20" Background="White" BorderThickness="0">
                            <StackPanel>
                                <TextBlock Text="👤" FontSize="60" HorizontalAlignment="Center"/>
                                <TextBlock Text="Физическое лицо" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Личные документы, справки" Foreground="Gray" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="Type_Legal_Click" Margin="20" Background="White" BorderThickness="0">
                            <StackPanel>
                                <TextBlock Text="🏢" FontSize="60" HorizontalAlignment="Center"/>
                                <TextBlock Text="Юридическое лицо / ИП" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Бизнес, регистрация, налоги" Foreground="Gray" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </Grid>
            </TabItem>

            <!-- ШАГ 3: КАТЕГОРИИ (ГРУППЫ УСЛУГ) -->
            <TabItem>
                <Grid>
                    <Button Content="⬅ Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="Back_Click" Style="{StaticResource ModernBtn}"/>
                    <TextBlock Text="Выберите категорию" FontSize="30" FontWeight="Light" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>

                    <ScrollViewer Margin="50,150,50,50">
                        <ItemsControl x:Name="CategoriesList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Click="Category_Click" Width="280" Height="100" Margin="10" 
                                            FontSize="18" FontWeight="SemiBold" Background="White" BorderThickness="0">
                                        <Button.Effect>
                                            <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                                        </Button.Effect>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- ШАГ 4: КОНКРЕТНАЯ УСЛУГА -->
            <TabItem>
                <Grid>
                    <Button Content="⬅ Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="Back_Click" Style="{StaticResource ModernBtn}"/>
                    <TextBlock Text="Выберите услугу" FontSize="30" FontWeight="Light" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>

                    <ScrollViewer Margin="50,150,50,50">
                        <ItemsControl x:Name="ServicesList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Tag="{Binding ServiceId}" Click="Service_Click" Width="400" Height="80" Margin="10" 
                                            HorizontalContentAlignment="Left" Padding="20,0" Background="White" BorderThickness="0">
                                        <Grid Width="360">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="📄" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ServiceName}" TextWrapping="Wrap" FontSize="16" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- ШАГ 5: ТАЛОН (Результат) -->
            <TabItem>
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Пожалуйста, возьмите талон" FontSize="24" HorizontalAlignment="Center" Foreground="Gray"/>

                        <!-- ПЕЧАТНАЯ ФОРМА -->
                        <Border x:Name="TicketCard" Width="350" Background="White" Padding="30" Margin="0,30">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="МФЦ «Мои Документы»" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="----------------------------------" HorizontalAlignment="Center" Foreground="Gray" Margin="0,10"/>

                                <TextBlock Text="ВАШ НОМЕР" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                <TextBlock x:Name="TicketNum" Text="A-052" FontSize="70" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryColor}"/>

                                <TextBlock x:Name="TicketService" Text="Замена паспорта" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,10"/>

                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Время выдачи:" FontSize="10" Foreground="Gray"/>
                                        <TextBlock x:Name="TicketTime" Text="14:30" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="Ожидание:" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                                        <TextBlock x:Name="TicketWait" Text="~15 мин" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#FF9800"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="В НАЧАЛО" Click="Restart_Click" Style="{StaticResource ModernBtn}" Width="200" Margin="0,20"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>