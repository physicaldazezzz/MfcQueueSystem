<Window x:Class="MfcQueueSystem.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Терминал регистрации" Height="700" Width="1000" WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Window.Resources>
        <!-- Шаблон кнопки услуги -->
        <DataTemplate x:Key="ServiceBtnTemplate">
            <!-- ВАЖНО: Click="ServiceButton_Click" привязывает нажатие к коду -->
            <Button Tag="{Binding ServiceId}" Click="ServiceButton_Click" 
                    Margin="10" Width="260" Height="120"
                    Cursor="Hand" BorderThickness="0" Background="Transparent">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="cardBorder" Background="White" CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.1" Color="#546E7A"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Width="5" HorizontalAlignment="Left" Background="{StaticResource PrimaryColor}" CornerRadius="2,0,0,2" Grid.RowSpan="2"/>
                                <TextBlock Text="{Binding ServiceName}" TextWrapping="Wrap" FontSize="15" FontWeight="Bold" Foreground="#37474F" VerticalAlignment="Center" Margin="15,10,10,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="cardBorder" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1. Шапка -->
        <Border Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryColor}" Width="40" Height="40" CornerRadius="8">
                        <TextBlock Text="МФЦ" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="ЗАПИСЬ НА ПРИЕМ" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#37474F" Margin="15,0,0,0"/>
                </StackPanel>
                <TextBlock x:Name="ClockText" Text="12:00" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- 2. Поиск и фильтры -->
        <StackPanel Grid.Row="1" Margin="20,20,20,0">
            <Border Background="White" CornerRadius="20" Height="50" Width="600" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="🔍 Поиск услуги..." Foreground="LightGray" VerticalAlignment="Center" Margin="20,0" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontSize="18" Padding="15,0"
                             TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>

            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Margin="0,15,0,0">
                <ItemsControl x:Name="CategoriesList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" Click="Category_Click" Margin="5" Padding="15,8" 
                                    Background="White" Foreground="#546E7A" FontWeight="SemiBold" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="15"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- 3. Список услуг -->
        <ScrollViewer Grid.Row="2" Margin="0,20">
            <StackPanel HorizontalAlignment="Center">
                <ItemsControl x:Name="ServicesList" ItemTemplate="{StaticResource ServiceBtnTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="1100" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 4. POPUP Ввод данных -->
        <Grid x:Name="RegistrationPopup" Grid.RowSpan="3" Background="#99000000" Visibility="Collapsed">
            <Border Background="White" Width="500" Height="450" CornerRadius="15" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30">
                <StackPanel>
                    <TextBlock Text="Регистрация в очереди" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,20"/>
                    <TextBlock Text="Введите ваше ФИО:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="InputName" Height="40" FontSize="16" Padding="5" BorderBrush="#B0BEC5"/>
                    <TextBlock Text="Категория:" Foreground="Gray" Margin="0,20,0,5"/>
                    <CheckBox x:Name="CheckBenefit" Content="У меня есть льготы (Ветераны, Инвалиды)" FontSize="16" Margin="0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <Button Content="Отмена" Click="CancelReg_Click" Background="#E0E0E0" Foreground="Black" Style="{StaticResource ModernBtn}" Width="100" Margin="0,0,10,0"/>
                        <Button Content="ПЕЧАТЬ ТАЛОНА" Click="ConfirmReg_Click" Style="{StaticResource ModernBtn}" Width="180"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 5. POPUP Талон (Для отображения) -->
        <Grid x:Name="TicketPopup" Grid.RowSpan="3" Background="#CCFFFFFF" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- ВОТ ЭТА КАРТОЧКА (Border) БУДЕТ ПЕЧАТАТЬСЯ -->
                <!-- Я дал ей имя x:Name="TicketCard" -->
                <Border x:Name="TicketCard" Background="White" Width="320" Padding="20" Margin="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="МФЦ «Мои Документы»" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="0,0,0,5"/>
                        <TextBlock Text="г. Москва, ул. Примерная, д. 1" HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="----------------------------------------" HorizontalAlignment="Center" Foreground="Gray" Margin="0,10"/>

                        <TextBlock Text="ВАШ ТАЛОН" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBlock x:Name="TicketNumberText" Text="A-005" FontSize="60" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" Margin="0,5"/>

                        <TextBlock Text="Услуга:" HorizontalAlignment="Center" Foreground="Gray"/>
                        <TextBlock x:Name="TicketServiceText" Text="Паспорт РФ" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10"/>

                        <TextBlock x:Name="TicketInfoText" Text="Иванов И.И." HorizontalAlignment="Center" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TicketPriorityText" Text="★ ЛЬГОТНАЯ ОЧЕРЕДЬ" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Black" Visibility="Collapsed" Margin="0,5"/>

                        <TextBlock Text="----------------------------------------" HorizontalAlignment="Center" Foreground="Gray" Margin="0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Перед вами:" Foreground="Gray" HorizontalAlignment="Center" FontSize="10"/>
                                <TextBlock x:Name="TicketCountText" Text="3 чел." HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Время:" Foreground="Gray" HorizontalAlignment="Center" FontSize="10"/>
                                <TextBlock x:Name="TicketTimeText" Text="14:30" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Пожалуйста, ожидайте вызова на табло" HorizontalAlignment="Center" FontSize="10" Foreground="Gray" Margin="0,20,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Button Content="Закрыть" Click="ClosePopup_Click" Style="{StaticResource ModernBtn}" Width="150" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>