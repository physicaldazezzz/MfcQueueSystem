<Window x:Class="MfcQueueSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="МФЦ | Главное меню" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="{StaticResource PrimaryColor}" CornerRadius="0,0,30,30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ЭЛЕКТРОННАЯ ОЧЕРЕДЬ" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center"/>
                <TextBlock Text="Система управления потоками" Foreground="#C5CAE9" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Кнопки меню -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="40" VerticalAlignment="Center" Height="220">
            <!-- ТЕРМИНАЛ -->
            <Button Style="{StaticResource ModernBtn}" Click="OpenTerminal_Click" Margin="15" Background="White" Foreground="{StaticResource TextPrimary}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="White" CornerRadius="20" Margin="5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5" Color="#90A4AE"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center">
                                <Viewbox Width="64" Height="64" Margin="0,0,0,15">
                                    <Path Fill="#37474F" Data="M4,2H20A2,2 0 0,1 22,4V16A2,2 0 0,1 20,18H13V20H11V18H4A2,2 0 0,1 2,16V4A2,2 0 0,1 4,2M4,4V16H20V4H4M6,6H18V14H6V6Z" />
                                </Viewbox>
                                <TextBlock Text="ТЕРМИНАЛ" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#37474F"/>
                                <TextBlock Text="Для клиентов" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- ТАБЛО -->
            <Button Style="{StaticResource ModernBtn}" Click="OpenDisplay_Click" Margin="15" Background="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="White" CornerRadius="20" Margin="5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5" Color="#90A4AE"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center">
                                <Viewbox Width="64" Height="64" Margin="0,0,0,15">
                                    <Path Fill="#37474F" Data="M21,16H3V4H21M21,2H3C1.89,2 1,2.89 1,4V16C1,17.11 1.89,18 3,18H10V20H8V22H16V20H14V18H21C22.11,18 23,17.11 23,16V4C23,2.89 22.11,2 21,2M5,6H14V8H5V6M5,10H14V12H5V10M19,6H16V8H19V6M19,10H16V12H19V10Z" />
                                </Viewbox>
                                <TextBlock Text="ТАБЛО" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#37474F"/>
                                <TextBlock Text="Экран в зале" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- СОТРУДНИК -->
            <Button Style="{StaticResource ModernBtn}" Click="OpenEmployee_Click" Margin="15" Background="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="White" CornerRadius="20" Margin="5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5" Color="#90A4AE"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center">
                                <Viewbox Width="64" Height="64" Margin="0,0,0,15">
                                    <Path Fill="#37474F" Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14M12,2A6,6 0 0,0 6,8A6,6 0 0,0 12,14A6,6 0 0,0 18,8A6,6 0 0,0 12,2M12,16C9.97,16 7.14,16.81 6.33,18H17.67C16.86,16.81 14.03,16 12,16Z" />
                                </Viewbox>
                                <TextBlock Text="СОТРУДНИК" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#37474F"/>
                                <TextBlock Text="Рабочее место" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </UniformGrid>
    </Grid>
</Window>