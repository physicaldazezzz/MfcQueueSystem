<Window x:Class="MfcQueueSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="350" Width="400" WindowStartupLocation="CenterScreen" Background="#F5F7FA">
    <Border Background="White" CornerRadius="15" Margin="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.1"/>
        </Border.Effect>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="🔐 ВХОД ДЛЯ СОТРУДНИКА" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#3F51B5" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" Foreground="Gray"/>
            <TextBox x:Name="TxtLogin" Height="35" FontSize="16" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Foreground="Gray"/>
            <PasswordBox x:Name="TxtPass" Height="35" FontSize="16" Padding="5" Margin="0,0,0,20"/>

            <Button Content="ВОЙТИ" Click="Login_Click" Height="40" Background="#3F51B5" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>